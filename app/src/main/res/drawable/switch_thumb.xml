<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item
                    android:right="2dp"
                    android:left="2dp"
                    android:top="2dp"
                    android:bottom="2dp">
                <shape
                        android:dither="true"
                        android:shape="oval"
                        android:useLevel="false"
                        android:visible="true">
                    <solid android:color="@color/rhino" />
                    <size
                            android:width="16dp"
                            android:height="16dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:right="2dp"
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <solid android:color="@color/fog" />
                    <size
                        android:width="16dp"
                        android:height="16dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item
                android:right="2dp"
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <solid android:color="@color/fog" />
                     <size
                        android:width="16dp"
                        android:height="16dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_hovered="true">
        <layer-list>
            <item
                android:right="2dp"
                android:left="2dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <solid android:color="@color/fog" />
                    <size
                        android:width="16dp"
                        android:height="16dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>