<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape
                        android:dither="true"
                        android:shape="rectangle"
                        android:useLevel="false"
                        android:visible="true">
                    <gradient
                            android:angle="270"
                            android:endColor="@color/iron"
                            android:startColor="@color/iron"/>
                    <corners
                            android:radius="16dp"/>
                    <size
                            android:width="20dp"
                            android:height="20dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="true" android:state_hovered="false">
        <layer-list>
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/grass"
                        android:startColor="@color/grass"/>
                    <corners
                        android:radius="16dp"/>
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="true" android:state_hovered="true">
        <layer-list>
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/jade"
                        android:startColor="@color/jade"/>
                    <corners
                        android:radius="16dp"/>
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="false" android:state_hovered="false">
        <layer-list>
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/dessert"
                        android:startColor="@color/dessert"/>
                    <corners
                        android:radius="16dp"/>
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="false" android:state_hovered="true">
        <layer-list>
            <item>
                <shape
                    android:dither="true"
                    android:shape="rectangle"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/garnet"
                        android:startColor="@color/garnet"/>
                    <corners
                        android:radius="16dp"/>
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>