<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/eggplant" />
            <corners android:bottomLeftRadius="@dimen/menu_corner_radius" android:bottomRightRadius="@dimen/menu_corner_radius"/>
        </shape>
    </item>
    <item android:state_activated="true" android:state_hovered="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/eggplant" />
            <corners android:bottomLeftRadius="@dimen/menu_corner_radius" android:bottomRightRadius="@dimen/menu_corner_radius"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/eggplant" />
            <corners android:bottomLeftRadius="@dimen/menu_corner_radius" android:bottomRightRadius="@dimen/menu_corner_radius"/>
        </shape>
    </item>
    <item>
        <shape />
    </item>
</selector>
